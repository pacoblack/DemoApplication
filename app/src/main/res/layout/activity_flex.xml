<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/flex_button1"
        android:layout_width="100dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:text="加载原生flex"
        android:onClick="performFlexClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/flex_button2"
        />
    <Button
        android:id="@+id/flex_button2"
        android:layout_width="100dp"
        android:layout_height="64dp"
        android:layout_marginTop="48dp"
        android:text="加载生成flex"
        android:onClick="performJsonFlexClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/flex_button1"
        app:layout_constraintRight_toRightOf="parent"
        />
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>